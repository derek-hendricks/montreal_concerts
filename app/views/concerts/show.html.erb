<div class="headline">  
	<div class="row">
  	<div class="large-12 columns">
  		<div class="row">
  			<div class="large-8 columns">
  				<h1><%= @artist %></h1>
  			</div>
  			<div class="large-4 columns">
  				<%= image_tag("play.png", :class => "poster hide-for-small") %>
  			</div>
  		</div>
    	<div class="row">
    		<% if !@track %>
		      <div class="large-6 columns"> 		
	        	<% if !@aristMusic || !@aristMusic.empty? %>
	        		<p class="lead">Click on the track images for more information and to listen to sample music</p>
	        	<% end %>
      		</div>
      		<div class="large-4 columns">	
        	</div>
        <% end %>
		  </div>
	  </div>
  </div>
</div>
<br/>

<!-- display all tracks that match the @artist keyword -->
<%= render partial: "shared/tracks_list", locals: { artist: @artist, aristMusic: @aristMusic } %>


