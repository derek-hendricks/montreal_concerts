<!-- display track image or default 'png' if track doesn't have one -->
<div class="row">
	<div class="large-2 columns">
		<%= image_tag(track.artwork_url ? track.artwork_url : "headphones.png", :class => "poster hide-for-small") %>
	</div>
	<div class="large-4 columns panel callout radius">
		<a href="<%= track.permalink_url %>"> <%= track.title %></a>
	</div>

</div>
<!-- embed track -->
<br/>
<%= embedded_track if embedded_track %>
<br/>
<div class="row">
<!-- list favourite count for track, and allow signed-in user to add to favourites -->
Favourite Count: <%= track.favoritings_count %>
<% if session[:user] %>
	<br/>
	<a href="/concert/<%= artist %>/like/<%= track.id %>">like</a>
<% end %>
<br/><br/>
<!-- display urls from track description -->
<% if track.description %>
	<% track.description.scan(/(https?:\/\/([-\w\.]+)+(:\d+)?(\/([\w\/_\.]*(\?\S+)?)?)?)/).each do |url|  %>
		<a href="<%= url[0] %>"><%= url[0] %></a><br/>
	<% end %>
<% end %>
</div>